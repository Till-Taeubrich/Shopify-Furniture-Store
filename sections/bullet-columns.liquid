<style>
  @media screen and (max-width: 749px) {
    .bullets-columns {
      display: block;
      margin-left: 25%;
      margin-right: 25%;
    }
    .bullet-item{
      margin-bottom: 3rem;
      justify-content: left;
    }
  }
